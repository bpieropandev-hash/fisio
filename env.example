# ============================================
# Configuração do Banco de Dados (Externo)
# ============================================
# URL completa de conexão com o banco PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://seu-servidor-postgres:5432/fisio

# Credenciais do banco de dados
SPRING_DATASOURCE_USERNAME=seu_usuario_postgres
SPRING_DATASOURCE_PASSWORD=sua_senha_segura

# ============================================
# Configuração JPA/Hibernate (Opcional)
# ============================================
# Opções: validate, update, none
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Schema padrão do banco
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_SCHEMA=master

# Timezone
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_TIME_ZONE=America/Sao_Paulo

# ============================================
# Connection Pool HikariCP (Opcional)
# ============================================
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=10

# ============================================
# Segurança
# ============================================
# Token secreto para JWT (mínimo 32 caracteres, use uma string aleatória forte)
API_SECURITY_TOKEN_SECRET=seu_token_secreto_muito_longo_e_seguro_aqui_minimo_32_caracteres

# ============================================
# Java Options (Opcional)
# ============================================
# Ajuste conforme o tamanho do servidor
# Pequeno (2GB RAM): -Xmx512m -Xms256m
# Médio (4GB RAM): -Xmx1024m -Xms512m
# Grande (8GB+ RAM): -Xmx2048m -Xms1024m
JAVA_OPTS=-Xmx1024m -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ============================================
# Logging (Opcional)
# ============================================
LOGGING_LEVEL_COM_PHYSIO=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN

