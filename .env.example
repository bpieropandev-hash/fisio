# Example .env file for the Fisio project
# Copy this to .env (or export variables in your environment) and adjust values.

# Spring profile
SPRING_PROFILES_ACTIVE=prod

# Server
SERVER_PORT=8080

# Datasource (Postgres)
SPRING_DATASOURCE_URL=jdbc:postgresql://db-host:5432/fisio
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=change_me
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA / Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_TIME_ZONE=UTC
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_SCHEMA=public

# Hikari (connection pool)
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=30000

# Logging (set to INFO for production)
LOGGING_LEVEL_COM_PHYSIO=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=ERROR
LOGGING_LEVEL_ORG_HIBERNATE_TYPE_DESCRIPTOR_SQL_BASICBINDER=ERROR

# CORS configuration
# Comma-separated list. For production, use your frontend origin(s), e.g. https://app.example.com
CORS_ALLOWED_ORIGINS=https://app.example.com
# Comma-separated HTTP methods allowed
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD
# Comma-separated headers allowed (use * to allow all)
CORS_ALLOWED_HEADERS=*
# Allow credentials (true/false) - careful when using '*' origin
CORS_ALLOW_CREDENTIALS=false
# Max age (seconds)
CORS_MAX_AGE=3600

# App secrets - MUST be changed in production and stored securely (secrets manager)
API_SECURITY_TOKEN_SECRET=please_change_this_to_a_secure_value

# Other options you might want in production
# JVM_OPTS=-Xms512m -Xmx1g -Djava.security.egd=file:/dev/./urandom
